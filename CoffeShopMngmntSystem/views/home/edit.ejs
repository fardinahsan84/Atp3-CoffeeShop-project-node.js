
  <!DOCTYPE html>
  <html>
  <head>
      <title>Login Page</title>
      <style>
      table.center {
            margin-left: auto;
            margin-right: auto;
          }
      </style>
  </head>
  <body>
    <form method="post">
      <fieldset>
        <legend>Edit item</legend>
        <table class="center">
          <tr>
            <td>Item name </td>
            <td>:<%= user.name %></td>
          </tr>
          <tr>
            <td>Item ID </td>
            <td>:<%= user.id %></td>
          </tr>
          <tr>
            <td>Price / item</td>
            <td><input type="text" value="<%= user.price %>" required="required" name="price"  id="price"></td>
          </tr>
          <tr>
            <td>Ingredients</td>
            <td><input type="text" value="<%= user.ingredients %>" required="required" name="ingredients"  id="ingredients"></td>
          </tr>
          <tr>
            <td>Item status</td>
            <td>  <input type="radio" id="available" name="status" value="available" checked="checked">
                  <label for="available">Available</label><br>
                  <input type="radio" id="notAvailable" name="status" value="not available" >
                  <label for="notAvailable">Not Available</label><br>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><button type="submit" name"choice" value="Update" class="btn btn-primary">Update</button></td>
          </tr>
        </table>
    </fieldset>
  </form>
  <table class="center">
      <tr>
        <td><a href="/manager/AllFoodItem">Back</a>|
      	<a href="/logout">Logout</a></td>
      </tr>
  </table>
</body>
</html>
