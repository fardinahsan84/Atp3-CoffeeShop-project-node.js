<!DOCTYPE html>
<html>
<head>
	<title>Food Item List page</title>
  <style>
  table.center {
        margin-left: auto;
        margin-right: auto;
      }
			h3 {text-align: right;}
			ul {
	  list-style-type: none;
	  margin: 0;
	  padding: 0;
	  overflow: hidden;
	  background-color: #333;
	}

	li {
	  float: left;
		width: 14%;
	}

	li a {
	  display: block;
	  color: white;
	  text-align: center;
	  padding: 14px 16px;
	  text-decoration: none;
	}

	li a:hover {
	  background-color: #111;
	}
		</style>

	</head>
	<body>
			<ul>
				<li><a href="/home">Home</a></li>
			  <li><a href="/manager/AllFoodItem">Coffee List</a></li>
				<li><a href="/manager/create">Post new Item</a></li>
				<li><a href="/manager/allDeliveryMan">Delivery man</a></li>
				<li><a href="/manager/AllFoodItem">Reviews</a></li>
				<li><a href="/manager/newArrival">New Arrival</a></li>
				<li><a href="/logout">Logout</a><li>
			</ul>
	<center>
				<h1>All Coffee items</h1>
			  <h2>Manager: <%= username %></h2>
			</center>

						<h3><a href="/home">Back</a></h3>


    		<% for(var i=0; i < userList.length; i++){ %>
				 <fieldset>
					<table class="center">
					<legend><h4><%= userList[i].name %></h4></legend>
    		<tr>
    			<th>ID</th><td>:<%= userList[i].id %></td><td></td>
				</tr>
				<tr>
    			<th>NAME</th><td>:<%= userList[i].name %></td><td><a href="/manager/edit/<%= userList[i].id %>"> Edit </a></td>
				</tr>
				<tr>
          <th>Price/item</th><td>:<%= userList[i].price %></td><td><a href="/manager/delete/<%= userList[i].id %>">Delete</a></td>
				</tr
				<tr>
          <th>Suggested</th><td>:<%= userList[i].suggested %></td><td><a href="/manager/suggest/<%= userList[i].id %>">Suggest</a></td>
				<tr>
    			<th>Status</th><td>:<%= userList[i].status %></td><td><a href="/manager/status/<%= userList[i].id %>">Change Status</a></td>
				</tr>
    			<th>Ingredients</th><td>:<%= userList[i].ingredients %></td><td><a href="/manager/ingredients/<%= userList[i].id %>">Edit Ingredients</a></td>
    		</tr>
				<h3><a href="/manager/Reviews/<%= userList[i].id %>">Reviews</a></h3>
				</table>
				</fieldset>
    		<% } %>

</body>
</html>
